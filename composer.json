{
    "name"             : "cogs",
    "description"      : "A personal framework for PHP",
    "type"             : "framework",
    "license"          : "MIT",
    "authors"          : [
        {
            "name" : "Greg Truesdell",
            "email": "odd.greg@gmail.com"
        }
    ],
    "homepage"         : "https://github.com/OddGreg/og-framework",
    "config"           : {
        "bin-dir": "local/bin"
    },
    "require"          : {
        "php"                            : ">=5.6.11",
        "nikic/fast-route"               : "dev-master",
        "myclabs/deep-copy"              : " ~1.3",
        "symfony/yaml"                   : "^2.0@dev",
        "vlucas/phpdotenv"               : "^2.1@dev",
        "symfony/finder"                 : "^3.0@dev",
        "zendframework/zend-diactoros"   : "^1.0@dev",
        "zendframework/zend-stratigility": "^1.0@dev"
    },
    "require-dev"      : {
        "phpunit/phpunit"       : "^5.1@dev",
        "satooshi/php-coveralls": "^0.7.0@dev",
        "tracy/tracy"           : "^2.4@dev"
    },
    "autoload"         : {
        "classmap": [
            "og",
            "app",
            "db",
            "tests"
        ],
        "psr-4"   : {
            "Og\\"     : "og/src",
            "Og\\App\\": "app"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable"    : true
}
